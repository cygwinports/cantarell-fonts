ORIG_PN="Cantarell"
inherit font

DESCRIPTION="Cantarell TTF sans serif fonts"
HOMEPAGE="http://abattis.org/cantarell/"
SRC_URI="http://abattis.org/cantarell/${ORIG_PN}-${PV:0:4}-${PV:4:2}-${PV:6:2}.zip"
SRC_DIR=${ORIG_PN}

src_compile() { :; }

src_install() {
	cd ${S}
	fontinto TTF
	dofont *.ttf
	dodoc FONTLOG.txt
}
